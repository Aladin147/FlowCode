{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out",
    "rootDir": "./src",
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test/**/*",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "out",
    "coverage",
    ".vscode-test"
  ]
}
